<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta Data -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="This is yf-10's dashboard!!" />
    <meta name="author" content="yf-10" />

    <!-- Title -->
    <title>@ViewData["Title"] - Dashboard</title>

    <!-- Favicon -->
    <link href="~/img/17507_color.svg" rel="icon" type="image/svg+xml">

    <!-- Cascading Style Sheet Bootstrap5 -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Cascading Style Sheet Shared -->
    <link href="~/css/shared/site.css" rel="stylesheet">
    <link href="~/css/shared/styles.css" rel="stylesheet">

    <!-- JavaScript Fontawesome -->
    <script src="~/lib/fontawesome/fontawesome-6.3.0.all.js"></script>

</head>

<body class="sb-nav-fixed">

    <!-- TopBar -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Brand Logo -->
        <a class="navbar-brand ps-3" href="~/">
            <span>Dashboard</span>
        </a>
        <!-- Sidebar Toggle # -->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!">
            <i class="fas fa-bars"></i>
        </button>
        <!-- Search -->
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            <div class="input-group">
                <input class="form-control" type="text" placeholder="Search for..." aria-label="Search for..." aria-describedby="btnNavbarSearch" />
                <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i class="fas fa-search"></i></button>
            </div>
        </form>
        <!-- Navigation -->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#!">Settings</a></li>
                    <li><a class="dropdown-item" href="#!">Activity Log</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="#!">Logout</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <!-- /TopBar -->

    <div id="layoutSidenav">

        <!-- SideBar -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <!-- HOME -->
                        <div class="sb-sidenav-menu-heading">HOME</div>
                        <a class="nav-link" href="~/">
                            <div class="sb-nav-link-icon"><i class="fa-solid fa-door-open"></i></div>
                            Welcome
                        </a>
                        <!-- CONTROL -->
                        <div class="sb-sidenav-menu-heading">CONTROL</div>
                        <a class="nav-link" href="~/api">
                            <div class="sb-nav-link-icon"><i class="fa-solid fa-key"></i></div>
                            API
                        </a>
                        <!-- ACTION -->
                        <div class="sb-sidenav-menu-heading">ACTION</div>
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                            <div class="sb-nav-link-icon"><i class="fa-solid fa-microchip"></i></div>
                            Batch
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" href="#">
                                    <i class="fa-solid fa-file-import me-2"></i>Data Import
                                </a>
                            </nav>
                        </div>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">
                        <i class="fa-solid fa-code-commit me-1"></i>Version 1.0
                    </div>
                </div>
            </nav>
        </div>
        <!-- /SideBar -->

        <div id="layoutSidenav_content">

            <!-- Page Content -->
            <main>
                @RenderBody()
            </main>
            <!-- /Page Content -->

            <!-- Footer -->
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Y.Fujino 2024</div>
                    </div>
                </div>
            </footer>
            <!-- /Footer -->

        </div>

    </div>

    <!-- Partial View -->
    @await Html.PartialAsync("_Toast");

    <!-- JavaScript Bootstrap5 -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- JavaScript Original Shared -->
    <script src="~/js/shared/site.js"></script>
    <script src="~/js/shared/scripts.js"></script>
    <script src="~/js/shared/toast.js"></script>

    <!-- JavaScript Page Content -->
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>