<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Welcome to Fujino's dashboard!!" />
    <meta name="author" content="Y.Fujino" />

    <!-- [TITLE] -->
    <title>@ViewData["Title"] - Dashboard</title>

    <!-- [FAVICON] -->
    <link href="~/assets/img/code-solid.svg" rel="icon" type="image/svg+xml">

    <!-- [CSS] -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/datatables/datatables-7.1.2.min.css" rel="stylesheet">

    <!-- [CSS] Original Shared -->
    <link href="~/css/shared/site.css" rel="stylesheet">
    <link href="~/css/shared/styles.css" rel="stylesheet">

    <!-- [JS] Fontawesome -->
    <script src="~/lib/fontawesome/fontawesome-6.3.0.all.js"></script>

</head>

<body class="sb-nav-fixed">

    <!-- TOPBAR NAVIGATION -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Brand Logo -->
        <a class="navbar-brand ps-3" href="~/Login/Auth">
            <i class="fa-solid fa-laptop-code"></i>
            <span>Dashboard</span>
        </a>
        <!-- Sidebar Toggle -->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!">
            <i class="fas fa-bars"></i>
        </button>
        <!-- Search -->
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            <div class="input-group">
                <input class="form-control" type="text" placeholder="Search for..." aria-label="Search for..." aria-describedby="btnNavbarSearch" />
                <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i class="fas fa-search"></i></button>
            </div>
        </form>
        <!-- Navigation -->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#!">Settings</a></li>
                    <li><a class="dropdown-item" href="#!">Activity Log</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="#!">Logout</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <!-- /TOPBAR NAVIGATION -->

    <div id="layoutSidenav">

        <!-- SIDEBAR NAVIGATION -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <!-- Core -->
                        <div class="sb-sidenav-menu-heading">Core</div>
                        <a class="nav-link" href="~/">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Home
                        </a>
                        <!-- Action -->
                        <div class="sb-sidenav-menu-heading">Action</div>
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                            <div class="sb-nav-link-icon"><i class="fa-solid fa-database"></i></div>
                            Import
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" href="#">Salary from Gmail</a>
                            </nav>
                        </div>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small"></div>
                    <div class="small">Powered by Bootstrap 5.2.3</div>
                </div>
            </nav>
        </div>
        <!-- /SIDEBAR NAVIGATION -->

        <div id="layoutSidenav_content">

            <!-- PAGE CONTENT -->
            <main>@RenderBody()</main>
            <!-- /PAGE CONTENT -->

            <!-- FOOTER -->
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Y.Fujino 2024</div>
                        <div>
                            <a href="~/Privacy">Privacy Policy</a>
                            &middot;
                            <a href="~/Error">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
            <!-- /FOOTER -->

        </div>

    </div>

    <!-- [JS] -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/chartjs/chartjs-2.8.0.min.js"></script>
    <script src="~/lib/datatables/datatables-7.1.2.min.js"></script>

    <!-- [JS] Original Shared -->
    <script src="~/js/shared/site.js"></script>
    <script src="~/js/shared/scripts.js"></script>

    <!-- [JS] Page Content -->
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>